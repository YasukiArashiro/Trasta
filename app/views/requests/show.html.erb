<div class="container">
	<div class="row">
		<p id="notice" style="color: green;"><%= notice %></p> <!-- requestのサクセスメッセージ -->
		<div class="request_title">
			<h1><%= @request.request_title %></h1>
		</div>
		<div class="opponent">
			<p>投稿者</p>
			<%= link_to user_path(@request.user) do %>
				<%= attachment_image_tag @request.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg", size:'100x100' %>
				<%= @request.user.nickname %>
			<% end %>
		</div>
		<div class="tcg_name">
			<p>TCG名</p> <p><%= @request.tcg_tag.tcg_name %></p>
		</div>
		<div class="match_day">
			<p>対戦日</p> <p><%= @request.match_day %></p>
		</div>
		<div class="meeting_time">
			<p>待ち合わせ時刻</p> <p><%= @request.meeting_time.strftime('%H:%M') %></p>
		</div>
		<div class="ending_time">
			<p>対戦終了時間</p> <p><%= @request.ending_time.strftime('%H:%M') %></p>
		</div>
		<div class="match_style">
			<p>対戦スタイル</p> <p><%= @request.match_style.match_style %></p>
		</div>
		<div class="prefecture">
			<p>待ち合わせ場所</p> <p><%= @request.prefecture %></p>
		</div>
		<div class="meeting_place">
			<p><%= @request.meeting_place %></p>
		</div>
		<div class="tcg_name">
			<p>コメント</p> <p><%= @request.request_comment %></p>
		</div>

		<div class="switch">
			<% if user_signed_in? %>
				<% if @request.user_id == current_user.id %>
					<%= link_to 'マッチリクエストを編集する', edit_request_path(@request) %>
				<% else %>
					<%= link_to '対戦を約束する' %>
				<% end %>
			<% end %>
		</div>
		<div class="back">
			<%= link_to 'マッチリクエスト一覧に戻る', requests_path %>
		</div>

	</div>
</div>