
<div class="container">
	<div class="row">
		<p id="notice" style="color: green;"><%= notice %></p> <!-- userのサクセスメッセージ -->
		<p><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></p>
		<p><%= @user.nickname %></p>
		<p><%= @user.introduction %></p>
		<p><%= @user.match_style.match_style %></p>
		<h3>プレイしているTCG</h3>
		<% @user.tcg_genres.each do |tcg| %>
			<%= tcg.tcg_tag.tcg_name %>
		<% end %>

		<p><%= link_to 'プロフィールを編集する', edit_user_path %></p>

		<h3>評価一覧</h3>

	</div>
</div>